@using Retail_Banking.ViewModels
@model CustomerAccountTransactions
@{
    ViewData["Title"] = "ViewAllTransactions";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = null;
}

<section class="vh-75" style="background-color: #eee;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-12 col-xl-4">

                <div class="card" style="border-radius: 15px;">
                    <div class="card-body">
                        <div class="mt-3 mb-4 text-center">
                            <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460__340.png"
                                 class="rounded-circle img-fluid" style="width: 100px;" />

                            <h4 class="mb-1">@Model.Customer.Name (@Model.Customer.Age)</h4>
                            <h5 class="mb-1">@Model.Customer.SSNID</h5>
                        </div>
                        <p class="text-muted mb-2">
                            Email: @Model.Customer.Email
                        </p>
                        <p class="text-muted mb-2">
                            Address: @Model.Customer.Address
                        </p>
                        <p class="text-muted mb-2">
                            Account ID: @Model.Account.AccountID
                        </p>
                        <p class="text-muted mb-2">
                            Balance: $@Model.Account.AccountBalance (@Model.Account.AccountType)
                        </p>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

@if (TempData["Response"] != null)
{
    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">Uh oh!</h4>
        <p>@TempData["Response"]</p>
        <hr>
        <p class="mb-0">To go back home @Html.ActionLink("Click me!","Index","Home")</p>
    </div>
}
else
{
    <section class="intro">
        <div class="mask d-flex align-items-center h-100">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12">
                        <div class="table-responsive bg-white" data-mdb-perfect-scrollbar="true" style="position: relative; height: 445px;">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">Transaction ID</th>
                                        <th scope="col">From Account</th>
                                        <th scope="col">To Account</th>
                                        <th scope="col">Amount</th>
                                        <th scope="col">Transaction Type</th>
                                        <th scope="col">Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Transactions transactions in Model.Transactions)
                                    {
                                        <tr>
                                            <th scope="row" style="color: #666666;">@transactions.TransactionID</th>
                                            <td>@transactions.FromAccountID</td>
                                            <td>@transactions.ToAccountID</td>
                                            <td>$@transactions.Amount</td>
                                            <td>@transactions.Type</td>
                                            <td>@transactions.Date</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
