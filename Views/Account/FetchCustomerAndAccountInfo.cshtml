@using Retail_Banking.ViewModels
@model CustomerAccountDetail
@{
    ViewData["Title"] = "FetchCustomerAndAccountInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Response"] != null)
{
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Error!</h4>
        <p>@TempData["Response"]</p>
        <hr>
        <p class="mb-0">To go back home @Html.ActionLink("Click me!","Index","Home")</p>
    </div>
}
else
{
    <section class="vh-75" style="background-color: #eee;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-12 col-xl-4">

                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body">
                            <div class="mt-3 mb-4 text-center">
                                <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460__340.png"
                                 class="rounded-circle img-fluid" style="width: 100px;" />
                            
                                <h4 class="mb-1">@Model.customer.Name (@Model.customer.Age)</h4>
                                <h5 class="mb-1">@Model.customer.SSNID</h5>
                            </div>
                            <p class="text-muted mb-2">
                                Email: @Model.customer.Email
                            </p>
                            <p class="text-muted mb-2">
                                Account ID: @Model.account.AccountID
                            </p>
                            <p class="text-muted mb-2">
                                Balance: $@Model.account.AccountBalance (@Model.account.AccountType)
                            </p>
                            <p class="text-muted mb-2">
                                Latest Update: @Model.account.Status
                            </p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
}
