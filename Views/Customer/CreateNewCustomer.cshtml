@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@model Customer
@{
    ViewData["Title"] = "CreateNewCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if(TempData["Response"]!=null){
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Error!</h4>
        <p>@TempData["Response"]</p>
        <hr>
        <p class="mb-0">To go back home @Html.ActionLink("Click me!","Index","Home")</p>
    </div>
}
else{
    <div class="row align-items-center">
        <div class="col-md-6">
            <form asp-action="CreateNewCustomer" method="post">
                <h4>Create a new account.</h4>
                <hr />
                <div class="form-group">
                    <label asp-for="@Model.SSNID"></label>
                    <input type="number" asp-for="@Model.SSNID" class="form-control" />
                    <span asp-validation-for="@Model.SSNID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Name"></label>
                    <input type="text" asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Age"></label>
                    <input type="number" asp-for="@Model.Age" class="form-control" />
                    <span asp-validation-for="@Model.Age" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Address"></label>
                    <input type="text" asp-for="@Model.Address" class="form-control" />
                    <span asp-validation-for="@Model.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Email"></label>
                    <input type="email" asp-for="@Model.Email" value="@Model.Email" readonly class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div> 
        <div class="col-md-6">
            <div class="row">
                <img src="https://s42137.pcdn.co/wp-content/uploads/2022/10/majority-of-banking-institutions-building-their-own-technology-stack.jpeg.optimal.jpeg" class="img-fluid">
            </div>      
        </div>
    </div>
}
